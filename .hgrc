[ui]
editor = /usr/bin/vim
username = Heikichi Umehara <heikichi3@gmail.com>
ignore = ~/.hgignore_global

[defaults]
log = -r :

[extensions]
mq =
eol =
color =
purge =
shelve=

[eol]
**.html = CRLF
**.xhtml = CRLF
**.css = CRLF
**.js = CRLF

[merge-tools]
p4.priority = 60
p4.premerge = True
p4.executable = /Applications/p4merge.app/Contents/MacOS/p4merge
p4.gui = True
p4.args = $base $local $other $output
p4.binary = False
