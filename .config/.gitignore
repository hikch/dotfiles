# .config is basically unmanaged
# Whitelist approach: Exclude everything, then explicitly include what we want to manage
/*

# ========================================
# COC (Conquer of Completion)
# ========================================
!/coc
/coc/*
!/coc/ultisnips

# ========================================
# Fish Shell
# ========================================
!/fish
/fish/*

# Core fish files
!/fish/config.fish
!/fish/fish_plugins

# Fish conf.d (whitelist specific files)
!/fish/conf.d
/fish/conf.d/*
!/fish/conf.d/00-env.fish
!/fish/conf.d/10-colors.fish
!/fish/conf.d/20-abbr.fish
!/fish/conf.d/fzf.fish
!/fish/conf.d/z.fish
!/fish/conf.d/tailscale.fish
!/fish/conf.d/99-local.fish.sample

# Custom fish functions (hand-edited)
!/fish/functions
/fish/functions/*
!/fish/functions/fish_prompt.fish
!/fish/functions/fish_user_key_bindings.fish

# Exclude dynamic/generated files
/fish/fish_variables
/fish/fishd.*
/fish/completions
/fish/themes
/fish/.DS_Store

# ========================================
# Git
# ========================================
!/git
!/git/config
!/git/ignore

# ========================================
# iTerm2
# ========================================
!/iterm2
/iterm2/*
!/iterm2/com.googlecode.iterm2.plist
/iterm2/AppSupport

# ========================================
# Direnv
# ========================================
!/direnv
/direnv/*
!/direnv/direnv.toml
# lib/ is auto-generated by direnv, exclude it

# ========================================
# Gemini CLI
# ========================================
!/gemini

# ========================================
# Starship (Terminal Prompt)
# ========================================
!/starship.toml
